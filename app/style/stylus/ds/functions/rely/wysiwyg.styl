$wysiwyg
	line-height 1.6
	a
		text-decoration none
		color inherit
		border-bottom 1px dotted
		&:hover
			border-bottom 1px solid
		&:visited
			color inherit
	abbr
		border-bottom 1px dotted
		cursor help
	cite
		font-style italic
	hr
		background #e6e6e6
		border none
		display block
		height 1px
		margin-bottom 1.4em
		margin-top 1.4em
	img
		vertical-align text-bottom
	ins
		background-color lime
		text-decoration none
	mark
		background-color alpha(#ff0, 0.4)
	strong
		font-weight 700
	sub
		vertical-align sub
	sup
		vertical-align super
	p, dl, ol, ul, blockquote, pre, table
		margin-bottom 1.4em
	p:empty
		display none
	h1, h2, h3, h4, h5, h6
		font-weight 700
		line-height 1.2
	h1
		font-size 2.4em
		margin-bottom .58333em
		margin-top .58333em
		line-height 1
	h2
		font-size 1.6em
		margin-bottom .875em
		margin-top 1.75em
		line-height 1.1
	h3
		font-size 1.3em
		margin-bottom 1.07692em
		margin-top 1.07692em
	h4
		font-size 1.2em
		margin-bottom 1.16667em
		margin-top 1.16667em
	h5
		font-size 1.1em
		margin-bottom 1.27273em
		margin-top 1.27273em
	h6
		font-size 1em
		margin-bottom 1.4em
		margin-top 1.4em
	dd
		margin-left 1.4em
	ol, ul
		list-style-position outside
		margin-left 1.4em
	ol ol ol
		list-style-type lower-roman
	ol ol ol ol
		list-style-type lower-greek
	ul ul ul
		list-style-type square
	blockquote
		border-left 4px solid #e6e6e6
		padding .6em 1.2em
	code, kbd, samp, pre
		// -moz-osx-font-smoothing auto
		// -webkit-font-smoothing auto
		background-color #f2f2f2
		color #333
		font-size .9em
	code, kbd, samp
		border-radius 3px
		line-height 1.77778
		vertical-align baseline
		padding .1em .4em .2em
	pre
		overflow auto
		padding 1em 1.2em
	pre code
		background none
		font-size 1em
		line-height 1em
	figure
		margin-bottom 2.8em
		text-align center
	figcaption
		font-size .8em
		margin-top .875em
	table
		width 100%
	table pre
		white-space pre-wrap
	th, td
		font-size 1em
		border 1px solid #e6e6e6
		line-height 1.4
		padding .7em
	thead tr, tfoot tr
		background-color #f5f5f5
	thead th, thead td, tfoot th, tfoot td
		font-size .9em
		padding .77778em
	small, sub, sup
		font-size .8em
	p, dl, ol, ul, blockquote, pre, table, blockquote p, figure
		&:last-child
			margin-bottom 0
	h1, h2, h3, h4, h5, h6, figure
		&:first-child
			margin-top 0
	ol, ol ol ol ol ol
		list-style-type decimal
	ol ol, ol ol ol ol ol ol
		list-style-type lower-alpha
	ul, ul ul ul ul ul
		list-style-type disc
	ul ul, ul ul ul ul, ul ul ul ul ul ul
		list-style-type circle
	thead th code, thead td code, tfoot th code, tfoot td code, tbody tr
		background-color #fff

